/* =========================
   QComboBox primary
   ========================= */
QComboBox#primary-fill {
    background-color: @primary;
    color: @fg;
    border: 1px solid @primary;
    border-radius: 8px;
    padding: 6px 10px;
    min-width: 6em;
}

QComboBox#primary-fill:hover {
    border: 1.5px solid @primary-light;
}

QComboBox#primary-fill:focus {
    border: 2px solid @primary;
    background-color: @primary-dark;
}

QComboBox#primary-fill::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 25px;
    border-left: 2px solid @primary-light;
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
    background: transparent;
}

QComboBox#primary-fill::drop-down:hover {
    background: @primary-light;
}

QComboBox#primary-fill::down-arrow {
    image: url(icons/arrow-down.svg);
    width: 16px;
    height: 16px;
}

QComboBox#primary-fill::down-arrow:on {
    image: url(icons/arrow-up.svg);
}

QComboBox#primary-fill QAbstractItemView {
    border: 2px solid @primary;
}
