/* QPuhshButton =-=-=-=-=-=-=-=-=-=-=-=-=-=-= */

QPushButton {
    color: #ffffff;
    background-color: #555555;
    border: 1.5px solid #060606;
    border-radius: 8px;
    font-size: 16px;
    padding: 7px 22px;
    font-weight: 500;
}
QPushButton:hover {
    background-color: #454545;
}
QPushButton:pressed {
    background-color: #222222;
}
/* Primary */
QPushButton#primary {
    background-color: #2a9fd6;
    border: 1.5px solid #2a9fd6;
}
QPushButton#primary:hover {
    background-color: #2288b5;
}
QPushButton#primary:pressed {
    background-color: #18698a;
}

/* Secondary */
QPushButton#secondary {
    background-color: #555555;
    border: 1.5px solid #060606;
}
QPushButton#secondary:hover {
    background-color: #454545;
}
QPushButton#secondary:pressed {
    background-color: #222222;
}

/* Success */
QPushButton#success {
    background-color: @success;
    border: 1.5px solid #77b300;
}
QPushButton#success:hover {
    background-color: #5e9000;
}
QPushButton#success:pressed {
    background-color: #466c00;
}
/* Info */
QPushButton#info {
    background-color: #9933cc;
    border: 1.5px solid #9933cc;
}
QPushButton#info:hover {
    background-color: #7a299f;
}
QPushButton#info:pressed {
    background-color: #5c2073;
}

/* Warning */
QPushButton#warning {
    background-color: #ff8800;
    border: 1.5px solid #ff8800;
}
QPushButton#warning:hover {
    background-color: #cc6d00;
}
QPushButton#warning:pressed {
    background-color: #995200;
}

/* Danger */
QPushButton#danger {
    background-color: #cc0000;
    border: 1.5px solid #cc0000;
}
QPushButton#danger:hover {
    background-color: #990000;
}
QPushButton#danger:pressed {
    background-color: #660000;
}


/* link */
QPushButton#link {
    background: transparent;
    border: none;
    color: #2a9fd6;
    font-size: 15px;
    text-align: left;
    padding: 0;
    font-weight: 500;
    text-decoration: none;
}
QPushButton#link:hover {
    color: #9933cc;
    text-decoration: underline;
}
QPushButton#link:pressed {
    color: #ff8800;
}
