/* QRadioButton =-=-=-=-=-=-=-=-=-=-=-=-=-=-= */
QRadioButton {
    padding: 5px;
    color: @fg;
    font-size: 15px;
    background-color: transparent; 
}

QRadioButton::indicator {
    width: 20px;
    height: 20px;
    border-radius: 10px; /* CÃ­rculo */
    background-color: @inputbg;
    border: 1px solid @secondary;
QRadioButton::indicator:hover {
    border-color: @primary;
}
}
QRadioButton#primary::indicator {
    background-color: transparent;
    border: 1px solid @primary;
}
QRadioButton#primary::indicator:hover {
    border: 1px solid @primary;
}
QRadioButton#primary::indicator:checked {
    background-color: transparent;
    border: 1px solid @primary;
    image: url('./icons/radio_unchecked_primary.svg');  
}

QRadioButton#secondary::indicator {
    background-color: transparent;
    border: 1px solid @secondary;
}
QRadioButton#secondary::indicator:hover {
